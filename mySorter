    public void findLength(View view) {
        EditText et = (EditText) findViewById(R.id.et);
        TextView tv = (TextView) findViewById(R.id.tv);
        switch (et.getText().toString().trim()) {
            case "0":
                tv.setText("The Text Length is : " + s.length());
                break;
            case "1":
                tv.setText("The Text Length is : " + s1.length());
                break;
            case "2":
                tv.setText("The Text Length is : " + s2.length());
                break;
            case "3":
                tv.setText("The Text Length is : " + s3.length());
                break;
            case "4":
                tv.setText("The Text Length is : " + s4.length());
                break;
            case "5":
                tv.setText("The Text Length is : " + s5.length());
                break;
        }
    }
}
