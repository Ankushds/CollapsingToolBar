        while (masterLength <= sorter.length()) {
            s = sorter.substring(lf, masterLength);
            int ln = s.lastIndexOf('.');
            Log.d(TAG, "" + ln+" , "+s.length());
            ln = ln + 1;
            s = s.substring(lf, ln);
            list.add(s);
            masterLength = ln + masterLength;
        }

